@model IEnumerable<Curso>

@{
    ViewData["Title"] = "Informaci√≥n Curso";
    Layout = "Simple";
}

<h1>@ViewData["Title"]</h1>

<strong>Desde la vista parcial</strong><br/><br/>
<button type="button" class="btn btn-secondary">Agregar</button><br/>    
<table class="table table-dark">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Nombre</th>
        <th scope="col">Editar</th>
        <th scope="col">Eliminar</th>
    </tr>
    </thead>
    <tbody>
    
        @foreach (Curso curso in @Model)
        {
            
            <tr>
               
                <td>@curso.Id</td>
                <td>@curso.Nombre</td>
                <td>
                    <button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("Edit","Curso",curso)'">Edit</button>    
                </td>
                <td>
                    <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Delete","Curso",curso)'">Delete</button>
                </td>
                
            </tr>
           
        }
    </tbody>
</table>
